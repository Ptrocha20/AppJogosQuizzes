<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Edit_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Estilo personalizado para AlertDialog no jogo -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <!-- Cor de fundo do diálogo -->
        <item name="android:background">#CC102040</item>
        <item name="android:windowBackground">@drawable/alert_dialog_background</item>

        <!-- Estilo para o título -->
        <item name="android:textColorPrimary">#FFEB3B</item> <!-- Amarelo para título -->
        <item name="android:textAppearanceLarge">@style/DialogTitleText</item>

        <!-- Estilo para a mensagem -->
        <item name="android:textColorSecondary">#FFFFFF</item> <!-- Branco para mensagem -->
        <item name="android:textAppearanceMedium">@style/DialogMessageText</item>

        <!-- Estilo para os botões -->
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonPositive</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonNegative</item>

        <!-- Animação e forma -->
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowMinWidthMajor">65%</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>

    <!-- Estilo para o texto do título -->
    <style name="DialogTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFEB3B</item> <!-- Amarelo -->
    </style>

    <!-- Estilo para o texto da mensagem -->
    <style name="DialogMessageText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item> <!-- Branco -->
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <!-- Estilo para o botão positivo (Continuar) -->
    <style name="DialogButtonPositive" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#4CAF50</item> <!-- Verde -->
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_verdadeiro</item>
    </style>

    <!-- Estilo para o botão negativo (Sair) -->
    <style name="DialogButtonNegative" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#F44336</item> <!-- Vermelho -->
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_falso</item>
    </style>

    <!-- Animação para o diálogo -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
</resources>