<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shield glow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#804FACFE" />
            <size android:width="120dp" android:height="120dp" />
        </shape>
    </item>

    <!-- Inner shield -->
    <item
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="60dp"
                android:startColor="#B0E0E6"
                android:endColor="#3F51B5" />
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- Shield pattern -->
    <item
        android:left="20dp"
        android:top="20dp"
        android:right="20dp"
        android:bottom="20dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="#80FFFFFF"
                    android:dashWidth="2dp"
                    android:dashGap="4dp" />
            </shape>
        </rotate>
    </item>
</layer-list>